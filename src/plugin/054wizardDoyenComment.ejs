<script>
  function showGuideDialog(type) {
    var elem = ".dialog-guide-service." + type;
    dropFunc.show(elem);
    $(elem).addClass("active");
    $(elem).find(".dgs-close").unbind("click").on("click", function () {
      $(elem).removeClass("active");
      dropFunc.hide();
    })
    $(elem).find(".dgs-pay").unbind("click").on("click", function () {
      var mealIdx = $(".dialog-guide-service .dgs-scroll>p.active").data("id");
      var dateIdx = $(".dialog-guide-service .dgsd-list>a.active").data("id");
      console.log('您选择了' + type + '服务\n套餐id为' + mealIdx + '\n出发日期id为' + dateIdx);
    })
  }

  $(function () {
    $(".dialog-guide-service .dgs-scroll>p,.dialog-guide-service .dgsd-list>a").each(function (i, el) {
      $(el).on("click", function () {
        $(el).addClass("active").siblings().removeClass("active");
      })
    })
  })

  $(function(){
    $(".more-by-click").on("click",function(){
      if(!$(".commfor-guide").is(":hidden")){
        console.log('加载向导评论')
      }else{
        console.log('加载咨询评论')
      }
    })
  })
</script>
<link rel="stylesheet" href="front/swiper/swiper.min.css">
<script src="./front/laydate/laydate.js"></script>
<script src="front/swiper/swiper.min.js"></script>
<script>
  $(function () {
    // 初始化轮播
    var mySwiper = new Swiper('.swiper-container', {
      autoplay: true,
      pagination: {
        el: '.swiper-pagination',
        bulletElement: 'li',
      },
    });
  })
  function showGuideDialog(type) {
    var elem = ".dialog-guide-service." + type;
    dropFunc.show(elem);
    $(elem).addClass("active");
    $(elem).find(".dgs-close").unbind("click").on("click", function () {
      $(elem).removeClass("active");
      dropFunc.hide();
    })
    $(elem).find(".dgs-pay").unbind("click").on("click", function () {
      var mealIdx = $(elem).find(".dgs-scroll>p.active").data("id");
      var dateIdx = $(elem).find(".depart-text").val();
      console.log('您选择了' + type + '服务\n套餐id为' + mealIdx + '\n出发日期为' + dateIdx);
    })
  }

  $(function () {
    $(".dialog-guide-service .dgs-scroll>p").each(function (i, el) {
      $(el).on("click", function () {
        $(el).addClass("active").siblings().removeClass("active");
      })
    })
  })

  $(function(){
    laydate.render({
      elem: '#depart-date1',
      showBottom: false,
      theme: '#ff772e',
      min:0
    });
    laydate.render({
      elem: '#depart-date2',
      showBottom: false,
      theme: '#ff772e',
      min:0
    });
  })
  
</script>
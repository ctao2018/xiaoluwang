
@import './base'
.share-area
  .sa-bantitl
    display flex
    justify-content: space-between
    align-items: center
    background-color #fff
    padding Rem(10) Rem(20)
    margin: 0 auto
    a
      padding: Rem(10) Rem(15)
      background-color #eff3f6
      color: #666
      font-size Rem(14)
      border-radius: Rem(40)
  .sab-title
      background-color #fff
      botLine()
      padding Rem(25/2) 0
      display flex
      justify-content: space-between
      align-items: center
      color: #666
      margin-top Rem(10)
      span
        display block
        width 19%
        padding 0 3%
        text-align center
        font-size: Rem(15)
  .sa-banbox
    color: #666
    .sab-page
      padding: Rem(10) 0
      display flex
      justify-content: space-between
      align-items: center
      background-color #fff
      color: #666
      line-height Rem(18)
      margin-bottom Rem(10)
      span
        display block
        width 17%
        padding 0 4%
        text-align: center
        font-size: Rem(12)
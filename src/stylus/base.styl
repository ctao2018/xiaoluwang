$theme-color = #ff772e

Rem(num)
  return num == 'auto' ? auto : (num/14)rem

abs(t,r,b,l)
  position absolute
  top Rem(t)
  right Rem(r)
  bottom Rem(b)
  left Rem(l)

getBg(name)
  str = '../assets/images/'+name+'.png'
  background url(str) no-repeat

botLine()
  border-bottom 1px solid #e5e5e5

ellp()
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

ellps(line = 2)
  display -webkit-box
  -webkit-box-orient vertical
  -webkit-line-clamp line
  overflow hidden

toMore(r = 15)
  position relative
  &:after
    content ''
    display block
    width Rem(9)
    height Rem(16)
    position absolute
    right Rem(r)
    top 50%
    margin-top Rem(-8)
    getBg('to-more')
    background-size Rem(9) Rem(16)
    background-position center
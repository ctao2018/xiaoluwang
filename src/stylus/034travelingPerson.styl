
@import './base'

.tranveling-person
  .tp-dachu
    text-align: center
    padding: Rem(15) 0
    background-color: #fff
    display block
    color: #333
    font-size Rem(15)
    margin-top Rem(10)
    span
      vertical-align middle
      margin-left Rem(4)
    .tp-tel-icon
      getBg("tel")
      width Rem(33/2)
      height Rem(33/2)
      display inline-block
      vertical-align middle
      background-size contain
  .tp-page-box
    margin-top Rem(10)
  .tp-page
    padding: Rem(15) Rem(10)
    display flex
    justify-content space-between
    align-items: center
    background-color: #fff
    border-bottom 1px solid #eee
    .tp-mb
      margin-bottom: Rem(10)
    input
      text-align: right 
      border: 0
  .tp-subBtn
    width 90%
    height Rem(40)
    line-height: Rem(40)
    font-size: Rem(17)
    text-align: center
    color: #fff
    background-color: $theme-color
    display block
    margin: 0 auto
    border-radius: Rem(4)
    margin-top Rem(50)
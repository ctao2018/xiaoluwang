@import './base'

.hugs-detail
  .hd-title
    padding Rem(10)
    line-height Rem(20)
    background #fff
    font-size Rem(15)
    color #333333
  .hd-items
    background #fff
    margin Rem(10) auto Rem(30)
    >li
      padding Rem(10)
      display flex
      justify-content space-between
      align-items center
      font-size Rem(13)
      botLine()
      &:last-child
        border 0
      .hdi-hum
        display flex
        align-items center
        .hdi-icon
          display flex
          justify-content space-between
          align-items center
          width Rem(35)
          height Rem(35)
          border-radius 100%
          margin-right Rem(10)
          overflow hidden
          >img
            max-width 100%
            max-height 100%
      .hdi-date
        color #666

@import './base'

.order-filling
  .of-title
    padding Rem(10)
    background #fff
    >h3
      font-size Rem(31/2)
      color #333333
      line-height Rem(24)
      font-weight 600
  .of-rule
    padding Rem(15) Rem(10)
    >a
      color: #666
  .of-page
    margin-top Rem(10)
    background-color #fff
    .ofp-title
      color #333
      font-size Rem(15)
      height Rem(50)
      line-height Rem(50)
      position relative
      font-weight bold
      padding-right Rem(10)
      padding-left Rem(45/2)
      &:after
        content: ''
        position absolute
        height Rem(13)
        width Rem(2)
        background-color $theme-color
        left Rem(10)
        top Rem(37/2)
    .ofp-bot
      botLine()
    .ofp-page
      height Rem(50)
      line-height Rem(50)
      padding 0 Rem(10)
      display flex
      justify-content space-between
      .ofp-maxw
        width 100%
        .ofp-line
          display flex
          justify-content space-between
          align-items: center
          padding-right Rem(35)
          toMore(0)
          color #333
          span
            color: #999
        .ofp-jfzhi
          display flex
          justify-content space-between
          align-items: center
          color #333
          span
            color #999
      .ofp-mans
        color #333
        position relative
        // width 100%
        em
          color $theme-color
        span
         color #666
         font-size: Rem(13)
         margin-left: Rem(5)
         vertical-align middle
         &.ofp-ml
           margin-left Rem(20)
        .l-crIcon
          getBg('adult')
          background-size contain
          display inline-block
          vertical-align middle
          width Rem(12)
          height Rem(13)
          margin-right Rem(5)
        .l-etIcon
          getBg('child')
          background-size contain
          display inline-block
          vertical-align middle
          width Rem(12)
          height Rem(13)
          margin-right Rem(5)
        .ofp-input
          height Rem(30)
          line-height: Rem(30)
          border 0
          margin-left Rem(5)
        .ofp-more
          font-size: 0
          beMore(0)
      .ofp-moneytxt
          color: $theme-color
          font-size: Rem(13)
      .of-jisuan
        float right
        font-size 0
        margin-left Rem(10)
        div
          display: inline-block
          vertical-align: middle
          border: 1px solid #fe8545
          height: Rem(55/2)
          line-height Rem(55/2)
          color #fe8545
          text-align center
          width Rem(55/2)
          font-size: Rem(20)
        .l-ordNum
          width Rem(40)
          background-color: $theme-color
          color #fff
          font-size: Rem(13)
  .of-pay
    position fixed
    bottom 0px
    left 0px
    z-index 9
    background #fff
    height Rem(50)
    display flex
    justify-content space-between
    align-items center
    width 100%
    box-shadow 0 -3px 5px rgba(0,0,0,.1)
    .btn-service
      flex 0 0 Rem(75)
      height Rem(50)
      border 0
      background #fff
      display flex
      flex-flow column
      justify-content center
      align-items center
      font-size Rem(12)
      color #666666
      border-left 1px solid #eee
      &:before
        content ''
        display block
        width Rem(20)
        height Rem(18)
        margin-bottom Rem(2)
        getBg('customer-service')
        background-size cover
        margin-bottom Rem(2)
    .ofp-price
      font-size Rem(15)
      color #333333
      margin-left Rem(10)
      >i
        font-size Rem(15)
        color $theme-color
        >em
          font-size Rem(11)
          margin 0 Rem(2)
    .ofp-info
      background transparent
      border 0
      padding 0 Rem(10)
    .ofp-pay
      height Rem(50)
      padding 0 Rem(35)
      background $theme-color
      color #fff
      border 0
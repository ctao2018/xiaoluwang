@import './base'

.wizard-doyen
  .wd-fixtop
    position fixed
    top Rem(45)
    left 0px
    z-index 2
    display flex
    width 100%
    height Rem(40)
    justify-content space-around
    align-items center
    background #fff
    color #666666
    font-size Rem(15)
    botLine()
    .wdf-mult
      position relative
      padding-right Rem(20)
      &:after
        content ''
        display block
        position absolute
        abs(0,0,0,auto)
        margin auto
        width Rem(15)
        height Rem(10)
        getBg('mult-sprites')
        background-size Rem(20) Rem(30)
        background-position Rem(-2) Rem(-2)
        transition .3s
      &.active
        color $theme-color
        &:after
          background-position-y Rem(-17)
    .wdf-sort
      position relative
      padding-right Rem(10)
      &:after
        content ''
        display block
        position absolute
        abs(0,0,0,auto)
        margin auto
        width Rem(6)
        height Rem(12)
        getBg('sort-sprites')
        background-size Rem(11) Rem(50)
        background-position Rem(-2) Rem(-19)
        transition .3s
      &.up,&.down
        color $theme-color
      &.up:after
        background-position-y Rem(-36)
      &.down:after
        background-position-y Rem(-3)
    .wdf-multlist
      display none
      position absolute
      top 100%
      left 0px
      z-index 3
      width 100%
      background #fff
      text-align center
      line-height Rem(40)
      padding Rem(5) 0
      border-top 1px solid #e6e6e6
      box-shadow 0 3px 5px rgba(0,0,0,.1)
      li.active
        color $theme-color
  .wd-section
    margin-top Rem(40)
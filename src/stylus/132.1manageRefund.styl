@import './base'


.manage-refund
    .mr-tit
        background #fff
        height Rem(50)
        display flex
        justify-content space-between
        align-items: center
        botLine()
        padding 0 Rem(10)
        color #666666
        font-size: Rem(14)
        .mr-titl
            display: flex
            align-items: center
            img 
                width Rem(35)
                height Rem(35)
                border-radius: Rem(35/2)
                margin-right Rem(10)
        .mr-titr
            color #999999
            font-size: Rem(12)
    .mr-box
        background #fff
        padding Rem(10) Rem(10) 0
        margin-bottom Rem(10)
        .mr-top
            display flex
            justify-content space-between
            padding-bottom Rem(10)
            botLine()
            .mr-topl
                width Rem(130)
                position relative
                img 
                    width 100%
                    height Rem(100)
                    border-radius: Rem(2)
                .mr-toplsa
                    height Rem(35/2)
                    line-height: Rem(35/2)
                    border-radius Rem(35/2)
                    padding Rem(5/2) Rem(15/2)
                    font-size: Rem(12)
                    background-color: rgba(0,0,0,0.5)
                    color #fff
                    position absolute
                    top Rem(15/2)
                    left Rem(15/2)
            .mr-topr
                width Rem(415/2)
                .mr-toprh
                    color: #333333
                    font-size: Rem(14)
                    line-height: Rem(16)
                    ellps(line = 2)
                    margin-bottom: Rem(40)
                .mr-toprpb
                    font-size: Rem(12)
                    color: #333333
                    span 
                        float left
                    .mr-tcl
                        margin-top Rem(8)
                        margin-right Rem(10)
                    .mr-tcr
                        color #666666
                        height Rem(20)
                        line-height Rem(20)
                        padding Rem(4) Rem(8)
                        background-color #eff3f6
                        border-radius: Rem(25/2)
                        max-width Rem(150)
                        ellp()
        .mr-ul
            .mr-li
                min-height Rem(40)
                display: flex
                justify-content space-between
                align-items: center
                color #666666
                font-size: Rem(14)
                botLine()
                &:last-child
                    border-bottom none 
                .mr-spa
                    color $theme-color
                .mr-spb
                    max-width 80%
                    padding Rem(8) 0
                    line-height: Rem(16)
                .mr-inp
                    width Rem(250)
                    height Rem(35)
                    line-height Rem(35)
                    padding Rem(2.5) 0
                    text-align: right 
                    border none 
                    color #666666
                    font-size: Rem(14)
    .mr-pz
        background #fff
        padding 0 Rem(10)
        .mr-pzp
            color #666666
            font-size: Rem(14) 
            height Rem(35)
            line-height Rem(35)
        .mr-pzbox
            margin-left Rem(-25/2)
            img 
                width Rem(110)
                height Rem(110)
                margin 0 0 Rem(10) Rem(25/2)
                float left
    .mr-btn
        margin Rem(10) 0 Rem(15)
        padding 0 Rem(15)
        a
            color #ffffff
            font-size Rem(17)
            width Rem(335/2)
            height Rem(45)
            line-height Rem(45)
            text-align: center
            border-radius: 5px
        .mr-btna
            float left
            background-color #999999
        .mr-btnb
            float right 
            background-color $theme-color
    .clr
        &:after
            content ""
            clear both
            visibility hidden
            display block
            font-size 0 
            height 0 
            line-height 0
    .clr 
        zoom:1
        
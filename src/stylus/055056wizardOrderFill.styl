@import './base'

.wizard-order-fill
  .wof-top
    padding 0 Rem(10)
    background #fff
    margin-bottom Rem(10)
    >h3
      padding Rem(10) 0
      font-size Rem(15)
      color #333
      font-weight 600
      line-height Rem(28)
      botLine()
    .woft-info
      font-size Rem(13)
      line-height Rem(22)
      color #666
      padding Rem(10) 0
  .wof-form
    padding 0 Rem(10)
    background #fff
    a.woff-line
      toMore(0)
      padding-right Rem(20)
      justify-content space-between
      .small
        color #999999
    .woff-line
      position relative
      padding Rem(10) 0
      display flex
      align-items center
      botLine()
      &:last-child
        border 0
      >label
        line-height Rem(30)
        flex 0 0 Rem(70)
        font-size Rem(15)
        color #333
      .woff-inp
        border 0
        height Rem(30)
        font-size Rem(15)
      .woff-more
        font-size 0
        beMore(0)
  .wof-remarks
    margin Rem(10) 0
    background #fff
    .wofr-erea
      padding Rem(10)
      textarea
        width 100%
        border 0
        outline none
        line-height Rem(25)
        height Rem(50)
        resize none
  .wof-invoice
    margin-bottom Rem(10)
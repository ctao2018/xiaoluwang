@import './base'

.add-product
    .ap-tit
        padding 0 Rem(10) Rem(10)
        background-color #ffffff
        margin-bottom Rem(10)
        .ap-titp
            height Rem(40)
            line-height Rem(40)
            font-size Rem(15)
            color #333333
            botLine()
        .ap-tittxt
            width Rem(340)
            height Rem(30)
            line-height Rem(16)
            color #333333
            font-size Rem(14)
            text-indent Rem(10)
            padding Rem(10) 0
            border none
        .ap-picp
            display flex
            justify-content space-between
            position relative
            .ap-more
                font-size 0
                beMore(0)
        .ap-picbx
            width 100%
            height Rem(40)
            margin-top Rem(10)
            overflow hidden
            margin-left Rem(-6)
            img 
                width Rem(65)
                height Rem(40)
                margin-left Rem(6)
                float left
    .ap-li
        background-color #ffffff
        padding 0 Rem(10)
        height Rem(50)
        line-height Rem(50)
        display flex
        justify-content space-between
        position relative
        margin-bottom Rem(10)
        font-size Rem(15)
        color #333333
        .ap-more
            font-size 0
            beMore(10)
        .ap-lisa
            float left 
            margin-right Rem(15)
        .ap-lisb
            float left 
            width Rem(225)
            font-size Rem(14)
            color #999999
            ellp()
            text-align right 
            margin-right Rem(15)
        .ap-gljd
            font-size Rem(14)
            color #999999
            padding-right Rem(15)
            &:after
                content ''
                display block
                width Rem(13/2)
                height Rem(24/2)
                position absolute
                right Rem(10)
                top 50%
                margin-top Rem(-(24/2/2))
                getBg('page-more')
                background-size Rem(13/2) Rem(24/2)
                background-position center
            .addr
                display inline-block
                min-width Rem(10)
                height Rem(50)
    .ap-btn
        display block
        height Rem(50)
        width Rem(355)
        border-radius 3px
        margin Rem(50) auto Rem(30)
        background $theme-color
        color #fff
        border 0
        font-size Rem(15)
    .clr
        &:after
            content ""
            clear both
            visibility hidden
            display block
            font-size 0 
            height 0 
            line-height 0
    .clr 
        zoom:1
@import './base'
.sharing-records
  .sr-title-shouyi
    background-color #fff
    color: #666
    font-size: Rem(13)
    text-align center
    padding Rem(15) 0
    line-height Rem(25)
    .srt-money
      font-size: Rem(20)
      color: $theme-color
  .sr-maishu
    margin Rem(10) 0
    background-color #fff
    padding Rem(20) 0
    display flex
    justify-content: space-between
    align-items: center
    >div
      width 50%
      text-align center
      position relative
      font-size: Rem(13)
      line-height: Rem(20)
      color: #999
      p
        &:first-child
          font-size: Rem(17)
          color #666
      &:first-child:after
        content: ''
        position absolute
        top: 0
        right 0
        width 1px
        height 100%
        background-color #e5e5e5
  .sr-listbox
    .wd-fixtop
      display flex
      width 100%
      height Rem(40)
      justify-content space-around
      align-items center
      background #fff
      color #666666
      font-size Rem(15)
      position relative
      botLine()
      .wdf-mult
        position relative
        padding-right Rem(20)
        &:after
          content ''
          display block
          position absolute
          abs(0,0,0,auto)
          margin auto
          width Rem(15)
          height Rem(10)
          getBg('mult-sprites')
          background-size Rem(20) Rem(30)
          background-position Rem(-2) Rem(-2)
          transition .3s
        &.active
          color $theme-color
          &:after
            background-position-y Rem(-17)
      .wdf-sort
        position relative
        padding-right Rem(10)
        &:after
          content ''
          display block
          position absolute
          abs(0,0,0,auto)
          margin auto
          width Rem(6)
          height Rem(12)
          getBg('sort-sprites')
          background-size Rem(11) Rem(50)
          background-position Rem(-2) Rem(-19)
          transition .3s
        &.up,&.down
          color $theme-color
        &.up:after
          background-position-y Rem(-36)
        &.down:after
          background-position-y Rem(-3)
      .wdf-multlist
        display none
        position absolute
        top 100%
        left 0px
        z-index 3
        width 100%
        background #fff
        text-align center
        line-height Rem(40)
        padding Rem(5) 0
        border-top 1px solid #e6e6e6
        box-shadow 0 3px 5px rgba(0,0,0,.1)
        li.active
          color $theme-color
    .ac-section
      background #fff
      margin-bottom Rem(10)
      .acs-header
        display flex
        justify-content space-between
        align-items center
        height Rem(40)
        line-height: Rem(40)
        botLine()
        padding 0 Rem(10)
        >h3
          position relative
          font-size Rem(14)
          color #333333
          &:after
            content ''
            display block
        .h-orders:after
          $accSectionSprite(3)
          abs(0,auto,0,2)
          margin auto
        .h-wallet:after
          $accSectionSprite(1)
          abs(0,auto,0,0)
          margin auto
        .h-redbag:after
          $accSectionSprite(2)
          abs(0,auto,0,2)
          margin auto
        .h-ident
          line-height Rem(45/2)
          padding 0 Rem(10)
          border-radius 20px
          background $theme-color
          color #fff
          font-size Rem(13)
        .h-more
          color #999999
          padding-right Rem(10)
      .acs-orders
        display flex
        justify-content space-around
        padding Rem(10) 0
        .acso-item
          display flex
          flex-flow column
          justify-content center
          align-items center
          font-size Rem(13)
          line-height Rem(23)
          color #333333
          >i
            width Rem(30)
            flex 0 0 Rem(30)
            position relative
            &:after
              content ''
              display block
              abs(0,0,0,0)
              margin auto
          &.dyk>i:after
            $accOrderSprite(2)
          &.dcx>i:after
            $accOrderSprite(1)
          &.dpj>i:after
            $accOrderSprite(3)
          &.sh>i:after
            $accOrderSprite(4)
      .acs-wallet
        padding 0 Rem(10)
        .acsw-balance
          display flex
          justify-content space-between
          align-items center
          padding Rem(10) Rem(5)
          color #666666
          line-height Rem(30)
          botLine()
          i
            color $theme-color
        .acsw-links
          display flex
          justify-content space-between
          align-items center
          padding Rem(10) Rem(5)
          >a
            padding-left Rem(25)
            line-height Rem(30)
            position relative
            color #666
            &:after
              content ''
              display block
              abs(0,auto,0,0)
              margin auto
          .l-coupon:after
            $accWalletSprite(1)
          .l-consume:after
            $accWalletSprite(2)
          .l-transfer:after
            $accWalletSprite(3)
      .acs-redbag
        .acsr-top
          display flex
          botLine()
        .acsr-info
          flex 1 0 auto
          color #666666
          padding Rem(10) Rem(20) Rem(10) Rem(10)
          >h3
            line-height Rem(28)
            text-align center
            max-width Rem(210)
            margin 0 auto
            ellp()
          .i-data
            font-size Rem(12)
            line-height Rem(21)
            i
              color $theme-color
            span
              width Rem(60)
              text-align right 
              display inline-block
        .acsr-share
          flex 0 1 Rem(130)
          display flex
          flex-flow column
          justify-content center
          align-items center
          color #666
          border-left 1px solid #e6e6e6
          >i
            width Rem(36/2)
            height Rem(31/2)
            getBg('icon-share')
            background-size cover
            margin-bottom Rem(10)
        .acsr-tips
          font-size Rem(12)
          color #999
          padding Rem(10)
          line-height Rem(20)


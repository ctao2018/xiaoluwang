
@import './base'
.my-wallet
  .mw-box
    margin-top Rem(-45)
    getBg("mywalletBg")
    background-size 100% auto
    height Rem(200)
    .mwb-page
      padding-top Rem(45)
      height Rem(155)
      .mwb-list
        display flex
        justify-content space-between
        align-items: center
        height Rem(50)
        padding-top Rem(45)
        li
          width 25%
          text-align: center
          color: #fff
        .mwb-num
          font-size: Rem(18)
          margin-bottom Rem(7)
        .mwb-txt
          font-size: Rem(12)
    .mw-nrpage
      margin-top Rem(-10)
      border-top-left-radius Rem(10)
      border-top-right-radius Rem(10)
      overflow hidden
      .mwn-pageradio
        background-color #fff
        color #333
        toMore(20)
        height Rem(50)
        line-height Rem(50)
        padding-left Rem(10)
      .mwn-pagelist
        padding 0 Rem(5)
        background-color #fff
        margin-top Rem(10)
        >a
          display block
          toMore()
          height Rem(50)
          line-height Rem(50)
          botLine()
          padding 0 Rem(5)
          color #333
          &:last-child
            border-bottom 0
    .mwn-pageyhk
      padding 0 Rem(5)
      background-color #fff
      margin-top Rem(10)
      font-size: 0
      >a
        display inline-block
        vertical-align middle
        font-size: Rem(14)
        text-align center
        color: #333
        width 25%
        padding Rem(20) 0
        .mwn-icons
          display block
          width Rem(50/2)
          height Rem(40/2)
          margin: 0 auto
          &.mwn-yhkicon
            getBg("yinhangka")
            background-size: auto 100%
          &.mwn-huigou
            getBg("huigou")
            background-size: auto 100%
          &.mwn-tixian
            getBg("tixian")
            background-size: auto 100%
        span
          display block
          padding-top Rem(10)
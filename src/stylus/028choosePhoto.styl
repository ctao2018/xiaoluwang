@import './base'
.choose-photo
    .cp-pageBox
        padding Rem(15)
        background-color #fff
        margin-bottom Rem(5)
        .cp-pageImg
            width Rem(195/2)
            height Rem(150/2)
            overflow hidden
            border Rem(2) solid #eaeaea
            display inline-block
            vertical-align top
            img
                height 100%
        .cp-pageMiao
            display inline-block
            vertical-align top
            width Rem(225)
            margin-left Rem(10)
            margin-top Rem(5)
            .cp-xiaotishi
                color #666
                font-size Rem(14)
                img
                    width Rem(15)
                    vertical-align middle
                .cp-times
                    margin-top Rem(5)
                    font-size Rem(13)
                    .cp-ml
                        margin-left Rem(15)
            .cp-psAdrss
                margin-top Rem(10)
                position relative
                input
                    height Rem(25)
                    border 0
                    width Rem(370/2)
                    padding-right Rem(15)
                .cp-righticon
                    position absolute
                    height Rem(15)
                    right Rem(3)
                    top Rem(5)
                    img
                        height 100%
                        width auto
    .l-gllist
        margin Rem(10) 0 0
        font-size 0
        margin-left - Rem(10)
        li
            border 1px solid #f1f1f1
            padding Rem(5) Rem(15/2)
            display inline-block
            font-size Rem(12)
            margin-left Rem(10) 
            color #666
        .on
            background-color: #f1f1f1
    .cp-textarea
        width 100%
        height Rem(210/2)
        border 0
        color #666
        line-height 20px
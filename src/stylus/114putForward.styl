
@import './base'

.yhk-page-box
  padding Rem(20)
  background-color #fff
  .yhkpb-page
    // width 100%
    height Rem(80)
    border-radius: Rem(8)
    padding Rem(10)
    display flex
    justify-content space-between
    background-color #047fe8
    .yhk-pic
      width Rem(75/2)
      height Rem(75/2)
      border-radius: 50%
      overflow hidden
      background-color #fff
      display inline-block
      vertical-align top
      margin-top Rem(5)
      img
        width Rem(55/2)
        height Rem(55/2)
        margin Rem(5)
    .yhk-txt
      display inline-block
      vertical-align top
      color: #fff
      font-size: Rem(13)
      padding-left: Rem(15)
      .yhkt-box
        padding: Rem(5) 0
        p
          padding-bottom Rem(10)
          &.yhk-name
            font-size: Rem(16)
    .yhk-tihuan
      color: #a9d7ff
      line-height Rem(80)
      font-size: Rem(13)
      padding-right Rem(15)
      position relative
      &:after
        content ''
        display block
        width Rem(13/2)
        height Rem(24/2)
        position absolute
        right Rem(0)
        top 50%
        margin-top Rem(-(24/2/2))
        getBg('yhk-right')
        background-size Rem(13/2) Rem(24/2)
        background-position center
.put-forward
  .pf-czbox
    margin-top Rem(10)
    .pfc-page
      display flex
      justify-content: space-between
      align-items: center
      background-color #fff
      padding Rem(15)
      span
        display inline-block
        width Rem(80)
      input
        width 100%
        border 0
    .pfc-tishi
      height Rem(40)
      line-height Rem(40)
      padding-left: Rem(10)
      color: #999
    .pfct-box
      padding 0 Rem(10)
      background-color #fff
      >div
        height Rem(50)
        line-height Rem(50)
        botLine()
        color: #333
        font-size: Rem(14)
        &:last-child
          border-bottom 0
  .pf-btn
    width 90%
    margin Rem(50) auto 0
    height Rem(45)
    line-height Rem(45)
    color: #fff
    text-align center
    font-size: Rem(17)
    background-color $theme-color
    display block
    border-radius: Rem(4)
@import './base'

.line-center
    .lc-topfix
        position: fixed
        top Rem(45)
        left 0
        right 0
        z-index 99
        .lc-menu-list
            background-color: #fff
            font-size: 0
            border-bottom 1px solid #e6e6e6
            li
                font-size: Rem(14)
                display: inline-block
                width 25%
                text-align: center
                a
                    padding: Rem(10) 0
                    display: inline-block
                    color #666
                .pr-on
                    border-bottom 1px solid $theme-color
                    color $theme-color
    .lc-big
        margin-top Rem(45)
        .lc-box
            display none
        .lc-ctz
            display block
        .lc-ck
            .lc-ckbx
                margin-bottom Rem(10)
                .lc-ckbxp
                    height Rem(45)
                    line-height: Rem(45)
                    color: #333333
                    font-size: Rem(15)
                    padding: 0 Rem(15)
                    background-color: #ffffff
                    font-weight: bold
                    botLine()
        .lc-jl
            .lc-jltop
                background-color: #ffffff
                margin-top: Rem(-10)
                padding Rem(10)
                display: flex
                justify-content: space-between
                margin-bottom Rem(10)
                >a
                    color: #666666
                    font-size: Rem(14)
                    padding: Rem(5/2) Rem(12)
                    height Rem(30)
                    line-height: Rem(30)
                    border-radius: Rem(15)
                    background-color: #eff3f6

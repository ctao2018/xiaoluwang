
@import './base'
.my-balance
  .mw-box
    margin-top Rem(-45)
    getBg("mywalletBg")
    background-size 100% auto
    height Rem(200)
    .mwb-page
      padding-top Rem(45)
      height Rem(155) 
      .mb-moneybox
        text-align: center
        color: #FFF
        font-size Rem(13)
        .mbm-montxt
          font-size: Rem(28)
          padding-bottom Rem(5)
      .mb-topbox
        display flex
        justify-content space-between
        align-items: center
        height Rem(55)
        line-height Rem(55)
        padding 0 Rem(20)
        >a
          height Rem(25)
          width Rem(60)
          line-height Rem(25)
          text-align center
          background-color #fff
          color: #1cbaff
          border-radius: Rem(20)
  .mw-nrpage
    margin-top Rem(-10)
    border-top-left-radius Rem(10)
    border-top-right-radius Rem(10)
    overflow hidden
    padding Rem(15)
    background-color #fff
    .mb-page
      botLine()
      display flex
      justify-content space-between
      align-items: center
      &:last-child
        border-bottom 0
    .mb-firstpage
      >div
        border-right 1px solid #eee
        width 33.3333%
        text-align center
        padding-bottom Rem(20)
        &:last-child
          border-right 0
        p
          padding-top Rem(8)
          color: #666
    .mb-lastpage
      >div
        border-right 1px solid #eee
        width 33.3333%
        text-align center
        padding-top Rem(20)
        &:last-child
          border-right 0
        p
          padding-bottom Rem(8)
          color: #666
          font-size: Rem(13)
          &.mb-txt
            color #666
            font-size: Rem(15)
  .mb-ljbox
    margin-top: Rem(10)
    padding 0 Rem(10)
    background-color #fff
    >a
      display block
      height Rem(50)
      line-height Rem(50)
      botLine()
      padding 0 Rem(5)
      color: #333
      .mbl-cz
        getBg("chongzhi")
        background-size contain
        width Rem(33/2)
        height Rem(33/2)
        display inline-block
        vertical-align middle
        margin-right: Rem(5)
      .mbl-tx
        getBg("txjilu")
        background-size contain
        width Rem(33/2)
        height Rem(33/2)
        display inline-block
        vertical-align middle
        margin-right: Rem(5)
      &:last-child
        border-bottom 0
      
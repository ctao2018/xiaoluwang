@import './base'

.order-list
  .ol-tab
    display flex
    justify-content space-around
    align-items center
    background #fff
    margin-bottom Rem(10)
    botLine()
    >li
      position relative
      line-height Rem(40)
      font-size Rem(15)
      color #666666
      border-bottom 2px solid transparent
      &.active
        color $theme-color
        border-color $theme-color
      #choose-date
        position absolute
        left 0px
        top 0px
        width 100%
        height 100%
        opacity 0